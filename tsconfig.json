{
   "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "allowJs": true,
      "removeComments": true,
      "strict": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": [
         "ES6"
      ],
      "typeRoots": [
         "./node_modules/@types",
         "./src/@types"
      ],
      "target": "es2017",
      "outDir": "./dist",
      "baseUrl": "./src"
   },
   "include": [
      "src/**/*.ts"
   ],
   "exclude": [
      "node_modules"
   ]
}